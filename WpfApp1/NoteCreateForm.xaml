<Window x:Class="WpfApp1.NoteCreateForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="NoteCreateForm" Height="350" Width="315">

    <Grid Width="300" Margin="0,0,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок заметки -->
        <TextBox x:Name="Main" Height="25" Width="200" Margin="10,10,90,394">Введи имя заметки</TextBox>
        <!-- Описание -->
        <TextBox x:Name="Details" Height="75" Width="270" Margin="10,40,20,314">Введи, если хочешь более подробно описать заметку</TextBox>
        <!-- Календарь -->
        <Calendar x:Name="DataPick" Margin="-5,120,0,141"></Calendar>
        <ComboBox x:Name="TagSelector" Margin="10,297,115,119"/>
        <Button x:Name="SendNoteButton" Margin="190,297,0,119" Click="SendNoteButton_Click">Добавить заметку</Button>
    </Grid>
</Window>